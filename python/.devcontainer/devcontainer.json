{
  "name": "nvim-python",
  "image": "mcr.microsoft.com/devcontainers/python:3-bullseye",
  
  "features": {
    "ghcr.io/duduribeiro/devcontainer-features/neovim:1": { "version": "stable" },
    "ghcr.io/devcontainers-extra/features/ripgrep:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config,target=/home/${localEnv:USER}/.config,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind,consistency=cached"
  ]
}
